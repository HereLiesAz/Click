<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="?attr/colorSurface" <!-- M3: Use theme background -->
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click."
        android:textAppearance="?attr/textAppearanceDisplayMedium" <!-- M3: Typography -->
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/service_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Status: Disabled"
        android:textAppearance="?attr/textAppearanceBodyLarge" <!-- M3: Typography -->
        android:padding="12dp"
        android:background="?attr/colorSurfaceVariant" <!-- M3: Surface for contrast -->
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/enable_service_button"
        style="?attr/materialButtonOutlinedStyle" <!-- M3: Button style (example) -->
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_accessibility_service" />

    <TextView
        android:id="@+id/overlay_permission_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overlay Permission: Denied"
        android:textAppearance="?attr/textAppearanceBodyLarge" <!-- M3: Typography -->
        android:padding="12dp"
        android:background="?attr/colorSurfaceVariant" <!-- M3: Surface for contrast -->
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/enable_overlay_permission_button"
        style="?attr/materialButtonOutlinedStyle" <!-- M3: Button style (example) -->
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_overlay_permission"/>

    <!-- This is the "toggle list" container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="?attr/colorSurfaceContainer" > <!-- M3: Use a themed surface color -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/options"
            android:textAppearance="?attr/textAppearanceTitleMedium" <!-- M3: Typography for title -->
            android:textColor="?attr/colorOnSurface" <!-- M3: Ensure text contrast -->
            android:layout_marginBottom="16dp"/> <!-- Increased margin for M3 spacing -->

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/fingerprint_scroll_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_fingerprint_scroll"
            android:textAppearance="?attr/textAppearanceBodyLarge" <!-- M3: Typography for switch text -->
            android:textColor="?attr/colorOnSurface" <!-- M3: Ensure text contrast -->
            android:paddingTop="12dp" <!-- Adjusted padding for M3 feel -->
            android:paddingBottom="12dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/lens_tap_proximity_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_lens_tap_proximity"
            android:textAppearance="?attr/textAppearanceBodyLarge" <!-- M3: Typography for switch text -->
            android:textColor="?attr/colorOnSurface" <!-- M3: Ensure text contrast -->
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/lens_tap_vibration_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_lens_tap_vibration"
            android:textAppearance="?attr/textAppearanceBodyLarge" <!-- M3: Typography for switch text -->
            android:textColor="?attr/colorOnSurface" <!-- M3: Ensure text contrast -->
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vibration_sensitivity"
            android:textAppearance="?attr/textAppearanceBodyMedium" <!-- M3: Typography -->
            android:textColor="?attr/colorOnSurfaceVariant" <!-- M3: Ensure text contrast -->
            android:layout_marginTop="16dp"/>
        <SeekBar
            android:id="@+id/vibration_sensitivity_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="8dp"/> <!-- M3: Added top margin for spacing -->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/options_note"
        android:textAppearance="?attr/textAppearanceBodySmall" <!-- M3: Typography -->
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

</LinearLayout>